---
import ClientRouter from "astro/components/ClientRouter.astro";
import Header from "../../components/Header.jsx";
import IoTMonitor from "../../components/IoTMonitor.jsx";
title: "Monitoreo IoT";
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Monitoreo IoT – AgroPrecision</title>

    <!-- CSS global y específico -->
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/estilos-agricultor.css" />

    <!-- Vite/Astro Dev Toolbar (solo en desarrollo) -->
    <script type="module" src="/@vite/client"></script>
    <ClientRouter />
  </head>

  <body>
    <!-- Header como isla React -->
    <Header client:load role="agricultor" />

    <!-- Validación de rol en cliente -->
    <script>
      (function () {
        const role = localStorage.getItem("role");
        if (!role || role !== "agricultor") {
          window.location.href = "/login";
        }
      })();
    </script>

    <!-- Contenedor full-width para Monitoreo IoT -->
    <div class="sensores-container">
      <h2 class="section-title">Monitoreo en Tiempo Real – Sensores IoT</h2>

      <div class="sensores-card">
        <p>Datos simulados de sensores en campo:</p>
        <div class="iot-monitor-wrapper">
          <IoTMonitor client:load />
        </div>
      </div>
    </div>
  </body>
</html>
