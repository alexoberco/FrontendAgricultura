---
import Header from "../../components/Header.jsx";
import AIRecommender from "../../components/AIRecommender.jsx";
import ClientRouter from "astro/components/ClientRouter.astro";
title: "Reportes e IA";
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reportes e IA – AgroPrecision</title>

    <!-- CSS global y específico -->
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/estilos-agricultor.css" />

    <!-- Vite/Astro Dev Toolbar (solo en desarrollo) -->
    <script type="module" src="/@vite/client"></script>
    <ClientRouter />
  </head>

  <body>
    <!-- Header como isla React -->
    <Header client:load role="agricultor" />

    <!-- Validación de rol en cliente -->
    <script>
      (function () {
        const role = localStorage.getItem("role");
        if (!role || role !== "agricultor") {
          window.location.href = "/login";
        }
      })();
    </script>

    <!-- Contenedor full-width para Reportes e IA -->
    <div class="reportes-container">
      <h2 class="section-title">
        Reportes y Recomendaciones Inteligentes
      </h2>

      <div class="reportes-card">
        <p>
          Use la siguiente herramienta para generar reportes inteligentes y
          recomendaciones basadas en sus datos (simulados):
        </p>
        <div class="ai-recommender-wrapper">
          <AIRecommender client:load />
        </div>
      </div>
    </div>
  </body>
</html>
